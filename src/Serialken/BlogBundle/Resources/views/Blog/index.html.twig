{# src\Serialken\BlogBundle\Resources\views\Blog #}

{% extends "SerialkenBlogBundle::layout.html.twig" %}

{% block title %}
  Accueil - {{ parent() }}
{% endblock %}



{% block serialken_body %}

   <h2>Liste des articles</h2>
   
   <ul>
     {% for article in articles %}
         {% include "SerialkenBlogBundle:Blog:article.html.twig" with { 'accueil': true } %}
         <hr />
     {% else %}  
           <p>Pas (encore !)d'articles</p>
     {% endfor %}
    </ul>
    
    <div class="pagination">
        <ul>
            {#  range cree un tableau de valeurs entre a et b          #}
            {% for p in range(1,nombrePage) %}
                <li{% if p == page %} class="active" {% endif %}>
                    <a href="{{ path('serialkenblog_accueil', {'page': p }) }}"> {{ p }}</a>
                </li>
            {% endfor %}
        </ul>
    </div>
	
{% endblock %}